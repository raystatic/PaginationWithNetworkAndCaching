<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingTop="16dp"
        android:paddingBottom="16dp">

        <androidx.cardview.widget.CardView
            android:layout_width="90dp"
            android:layout_height="90dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:cardCornerRadius="16sp"
            app:cardElevation="0dp"
            android:id="@+id/cardImage">

            <ImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:scaleType="centerCrop"
                android:id="@+id/imgNews"/>

        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@+id/cardImage"
            android:layout_marginStart="10dp"
            android:text="The times of India"
            android:textColor="@color/black"
            android:id="@+id/tvSource"
            app:layout_constraintTop_toTopOf="@+id/cardImage"/>

        <androidx.cardview.widget.CardView
            android:layout_width="5dp"
            android:layout_height="5dp"
            app:layout_constraintStart_toEndOf="@+id/tvSource"
            app:layout_constraintTop_toTopOf="@+id/tvSource"
            app:layout_constraintBottom_toBottomOf="@+id/tvSource"
            android:layout_marginStart="5dp"
            app:cardCornerRadius="360dp"
            app:cardElevation="0dp"
            android:id="@+id/viewDot">

            <View
                android:layout_width="5dp"
                android:layout_height="5dp"
                android:background="@color/black"/>

        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@+id/viewDot"
            android:text="12h"
            android:textColor="@color/black"
            android:id="@+id/tvTime"
            android:layout_marginStart="5dp"
            app:layout_constraintTop_toTopOf="@+id/tvSource"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/cardImage"
            app:layout_constraintTop_toBottomOf="@+id/tvSource"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:textColor="@color/black"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/tvTitle"
            android:text="From reducing stress to boosting immunity, here are five health benefits of Brahmi - Times of India"/>





    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>